{
  "name": "Jekyll website",
  "image": "mcr.microsoft.com/vscode/devcontainers/ruby:3-bullseye",
  "features": {
    "git-lfs": "latest"
  },
  "forwardPorts": [4000],
  "portsAttributes": {
    "4000": {
      "label": "Website"
    }
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "some-natalie/work-stuff": {
          "permissions": {
            "contents": "write",
            "pull_requests": "write"
          }
        }
      }
    }
  },
  "postCreateCommand": {
    "bundle": "bundle",
    "clone-repos": ".devcontainer/post-create.sh",
    "first-welcome": "sudo echo '\nðŸŒº Run ./load-workspace.sh to add the other repositories defined in the devcontainer to VS Code. ðŸŒº' >> /workspaces/.codespaces/shared/first-run-notice.txt"
  },
  "postAttachCommand": "bundle exec jekyll serve --livereload"
}
